<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:cpap_app.ViewModels"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="450"
             x:DataType="viewModels:TherapyStatisticsViewModel"
             x:Class="cpap_app.Views.StatisticsView">
    <Design.DataContext>
        <viewModels:TherapyStatisticsViewModel />
    </Design.DataContext>
    <UserControl.Styles>
        <StyleInclude Source="/Styling/GridStyles.axaml" />
        <Style Selector="Rectangle.HeaderSeparator2">
            <Setter Property="Fill" Value="{DynamicResource DataGridGridLinesBrush}" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Width" Value="1" />
            <Setter Property="Height" Value="36" />
            <Setter Property="Margin" Value="-4 0 0 0" />
        </Style>
        <Style Selector="Border.ColumnHeader > Grid > TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="24 0"/>
        </Style>
        <Style Selector="Border.GroupHeader">
            <Setter Property="Background" Value="{DynamicResource DataGridRowGroupHeaderBackgroundBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource DataGridGridLinesBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="4"/>
        </Style>
        <Style Selector="Border.GroupHeader > Grid > TextBlock">
            <Setter Property="Theme" Value="{DynamicResource BodyStrongTextBlockStyle}" />
            <Setter Property="Foreground" Value="{DynamicResource DataGridColumnHeaderForegroundBrush}" />
        </Style>
    </UserControl.Styles>
    <StackPanel Orientation="Vertical" Grid.IsSharedSizeScope="True" Margin="10">
        
        <!-- MAIN COLUMN HEADERS -->
        <Border Classes="ColumnHeader" Padding="2">
            <Grid x:DataType="viewModels:TherapyStatisticsViewModel" RowDefinitions="Auto,Auto">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="Auto" SharedSizeGroup="StatsC1" />
                    <ColumnDefinition Width="Auto" SharedSizeGroup="StatsC2" />
                    <ColumnDefinition Width="Auto" SharedSizeGroup="StatsC3" />
                    <ColumnDefinition Width="Auto" SharedSizeGroup="StatsC4" />
                    <ColumnDefinition Width="Auto" SharedSizeGroup="StatsC5" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                
                <Rectangle Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Classes="HeaderSeparator2" />
                <Rectangle Grid.Column="2" Grid.Row="0" Grid.RowSpan="2" Classes="HeaderSeparator2" />
                <Rectangle Grid.Column="3" Grid.Row="0" Grid.RowSpan="2" Classes="HeaderSeparator2" />
                <Rectangle Grid.Column="4" Grid.Row="0" Grid.RowSpan="2" Classes="HeaderSeparator2" />
                <Rectangle Grid.Column="5" Grid.Row="0" Grid.RowSpan="2" Classes="HeaderSeparator2" />
                <Rectangle Grid.Column="6" Grid.Row="0" Grid.RowSpan="2" Classes="HeaderSeparator2" />
                
                <TextBlock Grid.Column="0" Grid.Row="0" Text="Details" FontSize="16" HorizontalAlignment="Left" Margin="8 0 24 0" />

                <TextBlock Grid.Column="1" Grid.Row="0" Text="Most Recent" FontSize="16" />
                <TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding MostRecentDate, StringFormat={}{0:d}}" FontSize="14" />

                <TextBlock Grid.Column="2" Grid.Row="0" Text="Last Week" FontSize="16" />
                <TextBlock Grid.Column="2" Grid.Row="1" FontSize="14">
                    <TextBox.Text>
                        <MultiBinding StringFormat="{}{0:d} - {1:d}">
                            <Binding Path="LastWeekStart" Mode="OneWay" />
                            <Binding Path="MostRecentDate" Mode="OneWay" />
                        </MultiBinding>
                    </TextBox.Text>
                </TextBlock>

                <TextBlock Grid.Column="3" Grid.Row="0" Text="Last Month" FontSize="16" />
                <TextBlock Grid.Column="3" Grid.Row="1" FontSize="14">
                    <TextBox.Text>
                        <MultiBinding StringFormat="{}{0:d} - {1:d}">
                            <Binding Path="LastMonthStart" Mode="OneWay" />
                            <Binding Path="MostRecentDate" Mode="OneWay" />
                        </MultiBinding>
                    </TextBox.Text>
                </TextBlock>

                <TextBlock Grid.Column="4" Grid.Row="0" Text="Last 90 Days" FontSize="16" />
                <TextBlock Grid.Column="4" Grid.Row="1" FontSize="14">
                    <TextBox.Text>
                        <MultiBinding StringFormat="{}{0:d} - {1:d}">
                            <Binding Path="LastNinetyDaysStart" Mode="OneWay" />
                            <Binding Path="MostRecentDate" Mode="OneWay" />
                        </MultiBinding>
                    </TextBox.Text>
                </TextBlock>

                <TextBlock Grid.Column="5" Grid.Row="0" Text="Last Year" FontSize="16" />
                <TextBlock Grid.Column="5" Grid.Row="1" FontSize="14">
                    <TextBox.Text>
                        <MultiBinding StringFormat="{}{0:d} - {1:d}">
                            <Binding Path="LastYearStart" Mode="OneWay" />
                            <Binding Path="MostRecentDate" Mode="OneWay" />
                        </MultiBinding>
                    </TextBox.Text>
                </TextBlock>
            </Grid>
        </Border>
        
        <Border Classes="GroupHeader">
            <TextBlock Text="Group Header" />
        </Border>
        
        <ItemsRepeater ItemsSource="{Binding Items}" Margin="0 2 0 0" VerticalCacheLength="100">
            <ItemsRepeater.Styles>
                <Style Selector="TextBlock">
                    <Setter Property="IsHitTestVisible" Value="False" />
                </Style>
            </ItemsRepeater.Styles>
            <ItemsRepeater.ItemTemplate>
                <DataTemplate DataType="{x:Type viewModels:TherapyStatisticsItemViewModel}">
                    <Border Classes="SelectionRect">
                        <Grid RowDefinitions="Auto" Classes="TableData">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="Auto" SharedSizeGroup="StatsC1" />
                                <ColumnDefinition Width="Auto" SharedSizeGroup="StatsC2" />
                                <ColumnDefinition Width="Auto" SharedSizeGroup="StatsC3" />
                                <ColumnDefinition Width="Auto" SharedSizeGroup="StatsC4" />
                                <ColumnDefinition Width="Auto" SharedSizeGroup="StatsC5" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{Binding Name}" Margin="16 0 0 0" />
                            <TextBlock Grid.Column="1" Text="{Binding MostRecentValue, StringFormat={}{0:F2}}" HorizontalAlignment="Center" />
                            <TextBlock Grid.Column="2" Text="{Binding LastWeekAverage, StringFormat={}{0:F2}}" HorizontalAlignment="Center" />
                            <TextBlock Grid.Column="3" Text="{Binding LastMonthAverage, StringFormat={}{0:F2}}" HorizontalAlignment="Center" />
                            <TextBlock Grid.Column="4" Text="{Binding LastNinetyDayAverage, StringFormat={}{0:F2}}" HorizontalAlignment="Center" />
                            <TextBlock Grid.Column="5" Text="{Binding LastYearAverage, StringFormat={}{0:F2}}" HorizontalAlignment="Center" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsRepeater.ItemTemplate>
        </ItemsRepeater>
        
    </StackPanel>
</UserControl>