<ui:Page x:Class="example_viewer.DataBrowser"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
         xmlns:local="clr-namespace:example_viewer"
         mc:Ignorable="d"
         xmlns:ui="http://schemas.modernwpf.com/2019"
         Title="DataBrowser">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="300" Width="*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition MinWidth="300" Width="3*" />
        </Grid.ColumnDefinitions>
        <GridSplitter Grid.Column="1" Width="4" HorizontalAlignment="Stretch" Background="#333" />
        <ui:SimpleStackPanel Grid.Column="0" Orientation="Vertical">
            <Grid HorizontalAlignment="Stretch" Margin="0 0 -8 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="40"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Margin="8 0" VerticalAlignment="Center" Padding="0" Click="btnPrevDay_OnClick">
                    <ui:FontIcon Name="btnPrevDay" Glyph="&#xF0B0;" FontSize="14" />
                </Button>
                <DatePicker Grid.Column="1" x:Name="calendar" HorizontalAlignment="Stretch" SelectedDateFormat="Long"
                            BorderBrush="#444" VerticalAlignment="Center">
                </DatePicker>
                <Button Grid.Column="2" Margin="8 0" VerticalAlignment="Center" Padding="0" Click="btnNextDay_OnClick">
                    <ui:FontIcon Name="btnNextDay" Glyph="&#xF0AF;" FontSize="14" />
                </Button>
            </Grid>
            <ScrollViewer Name="scrollStatistics" BorderBrush="Red" Padding="5" Margin="0 20 0 0"
                          VerticalScrollBarVisibility="Visible">
                <ui:SimpleStackPanel Grid.Column="0" Orientation="Vertical">
                    <Grid Name="RespiratoryEventSummary" Margin="5 0 5 0">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Rectangle Grid.Row="0" Grid.ColumnSpan="2" Fill="Orange" />
                        <TextBlock Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" FontWeight="Bold"
                                   HorizontalAlignment="Center" Foreground="Black" FontSize="16" Padding="0 4"
                                   VerticalAlignment="Center">
                            <Run>AHI</Run>
                            <Run Text="{Binding AHI, Mode=OneWay}"></Run>
                        </TextBlock>
                        <TextBlock Grid.Column="0" Grid.Row="1" Text="Obstructive Apnea" Margin="0 8 0 0" />
                        <TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding OAI}" HorizontalAlignment="Right"
                                   Margin="0 8 0 0" />
                        <TextBlock Grid.Column="0" Grid.Row="2" Text="Hypopnea" />
                        <TextBlock Grid.Column="1" Grid.Row="2" Text="{Binding HI}" HorizontalAlignment="Right" />
                        <TextBlock Grid.Column="0" Grid.Row="3" Text="Clear Airway" />
                        <TextBlock Grid.Column="1" Grid.Row="3" Text="{Binding CAI}" HorizontalAlignment="Right" />
                        <TextBlock Grid.Column="0" Grid.Row="4" Text="Unclassified" />
                        <TextBlock Grid.Column="1" Grid.Row="4" Text="{Binding UAI}" HorizontalAlignment="Right" />
                        <TextBlock Grid.Column="0" Grid.Row="5" Text="RERA" />
                        <TextBlock Grid.Column="1" Grid.Row="5" Text="{Binding RIN}" HorizontalAlignment="Right" />
                        <TextBlock Grid.Column="0" Grid.Row="6" Text="Cheyne-Stokes" />
                        <TextBlock Grid.Column="1" Grid.Row="6" Text="{Binding CSR}" HorizontalAlignment="Right" />
                    </Grid>
                </ui:SimpleStackPanel>
            </ScrollViewer>
        </ui:SimpleStackPanel>
        <StackPanel Name="pnlNoDataAvailable" Grid.Column="2" Orientation="Vertical" VerticalAlignment="Top"
                    Margin="0 50">
            <TextBlock FontSize="24" HorizontalAlignment="Center" TextWrapping="Wrap">
                There is no data available for the selected date.
            </TextBlock>
            <TextBlock FontSize="14" HorizontalAlignment="Center" TextWrapping="Wrap" Margin="100 20">
                Please select a date with CPAP data available using the DatePicker control in the upper left corner.
            </TextBlock>
        </StackPanel>
    </Grid>
</ui:Page>